<resources>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/OutlinedButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/OutlinedButtonStyle</item>
        <item name="backgroundColor">?DialogBG</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppVersionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="AppVersionTextNumber" parent="AppVersionText">
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomDialogButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="SocialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">?colorLinkImage</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?colorLinkImage</item>
    </style>

    <style name="MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">?colorSurfaceVariant</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="CardTextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogCardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?colorSettingsTitle</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogCardSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?colorSecondaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsItemSummary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">?colorWelcomeHeaderSubtitle</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SettingsItemTitle" parent="SettingsItemSummary">
        <item name="android:textColor">?colorSettingsTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?colorLinkBG</item>
    </style>

    <style name="WelcomeHeaderTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">@dimen/top_header_margin</item>
    </style>

    <style name="WelcomeHeaderSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorWelcomeHeaderSubtitle</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>

    <style name="ToolbarTextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomDialogCard" parent="DialogCard">
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingBottom">4dp</item>
    </style>

    <style name="BottomDialogCardTitle" parent="DialogCardTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BottomDialogCardTextItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">?colorSurfaceVariant</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>

    <style name="SnackButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>